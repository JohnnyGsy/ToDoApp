<div class="row">
<div class="col-md-4 col-md-offset-4">

<h2>Log in</h2>

<div class="background-for-autentification">
  <div class="row">  
    <div class="container">
      <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
           
        
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-signin") do |f| %>
              <span id="reauth-email" class="reauth-email"></span>
                <div class="field">
                  <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address" %>
                  <br>
                </div>

                <div class="field">
                  <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control", placeholder: "Password", required: true %>
                </div>

              <% if devise_mapping.rememberable? -%>
                <div id="remember" class="field forgot-password checkbox">
                  <label>
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me  %>
                  </label>
                </div>
              <% end %>

                <div class="actions">
                  <%= f.submit "Login", class: "btn btn-lg btn-primary btn-block btn-signin" %>
                </div>
          <% end %>

          <%= render "devise/shared/links" %>
         
      </div><!-- /card-container -->
    </div><!-- /container -->      
  </div>
</div>

</div>
</div>